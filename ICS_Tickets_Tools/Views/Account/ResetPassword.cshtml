@model ICS_Tickets_Tools.ViewModels.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

    <style>
        /* Custom styles for login form and background */
        body {
            background-image: url('path/to/your/image.jpg');
            background-image: url('../../image/desktop-wallpaper-backgrounds-for-login-page-login-page.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            height: 100vh;
            font-family: Arial, sans-serif;
        }

        .card {
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .card-body {
            padding: 2rem;
        }

        .form-control {
            border-radius: 0.5rem;
        }

        .btn-login {
            border-radius: 0.5rem;
        }
    </style>
</head>
<body>

    @* Alerts *@
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" id="alertBox">
            @TempData["Message"]
        </div>
    }

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-body">
                        <div>
                            <!-- Display the alert message using ViewBag -->
                            @if (ViewBag.PasswordResetAlert != null)
                            {
                                <div id="myForm" style="border: 1px solid #ccc; padding: 10px; background-color: #ABEBC6; color: #721c24; ">
                                    @ViewBag.PasswordResetAlert
                                    <button onclick="closeAlert()">OK</button>
                                </div>
                            }

                            <!-- Your other content goes here -->
                        </div>
                        <h3 class="text-center mb-4">Reset Password</h3>

                        <form asp-action="ResetPassword" method="post" novalidate>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="EmployeeName">Employee Name</label>
                                <input asp-for="EmployeeName" class="form-control" />
                                <span asp-validation-for="EmployeeName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">Reset</button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>

                        <div id="errorMessage" class="text-danger mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script>
        function closeAlert() {
            // Optionally hide the alert first (not required if redirecting immediately)
            // document.getElementById('myForm').style.display = 'none';

            // Redirect to another action or page
            window.location.href = '@Url.Action("Index", "Home")'; // Replace with your desired action and controller
        }
    </script>

</body>
</html>
