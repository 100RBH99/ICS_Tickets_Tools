@model ICS_Tickets_Tools.ViewModels.AssignTicketViewModel

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assign Tickets</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('../../image/aaa.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            height: 100vh;
            font-family: Arial, sans-serif;
        }

        .card {
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .card-body {
            padding: 2rem;
        }

        .form-control {
            border-radius: 0.5rem;
        }

        .btn-login {
            border-radius: 0.5rem;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-body">
                        <h3 class="text-center mb-4">Assign Tickets</h3>
                        @using (Html.BeginForm("AssignTicket", "Tickets", FormMethod.Post, new { enctype = "multipart/form-data", id = "formId" }))
                        {
                            @Html.HiddenFor(m => m.Id)
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label for="TicketNo">Ticket No</label>
                                @Html.TextBoxFor(m => m.TicketNo, new { @class = "form-control", @readonly = "readonly" })
                            </div>

                            <div class="form-group">
                                <label for="Priority">Priority</label>
                                @Html.DropDownListFor(m => m.Priority, new SelectList(new[] { "High", "Medium", "Low" }), "-- Select Priority --", new { @class = "form-control" })
                                <div class="text-danger">@Html.ValidationMessageFor(m => m.Priority)</div>

                            </div>
                                                   
                            <div class="form-group">
                                <label asp-for="AssignedTo" class="control-label">Assign To</label>
                                <select asp-for="AssignedTo" asp-items="ViewBag.AssignedTos" class="form-control">
                                       <option value="">-- Select Person --</option>
                                 </select>
                                 <span asp-validation-for="AssignedTo" class="text-danger"></span>
                            </div>
                           
                            <div class="form-group">
                                <label for="Status">Status</label>
                                @Html.DropDownListFor(m => m.Status, new SelectList(new[] {"Open"}), "-- Select Status --", new { @class = "form-control" })
                               @*  <div class="text-danger">@Html.ValidationMessageFor(m => m.Status)</div> *@
                            </div>

                            <div class="form-group">
                                <label for="Remark">Remark</label>
                                @Html.TextAreaFor(m => m.AssignedRemark, new { @class = "form-control", placeholder = "Enter remarks here", rows = 3, id = "TicketDescription" })
                                <small class="text-muted">Maximum 15 words allowed.</small>
                                <div class="text-danger">@Html.ValidationMessageFor(m => m.AssignedRemark)</div>
                            </div>

                            <button type="submit" class="btn btn-success mt-3 btn-block">Save</button>
                            <a href="@Url.Action("TicketsIndex", "Tickets")" class="btn btn-danger mt-3 btn-block">Cancel</a>
                        }
                        <div id="errorMessage" class="text-danger mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />

        <script>
            document.getElementById('TicketDescription').addEventListener('input', function () {
                let words = this.value.trim().split(/\s+/);
                if (words.length > 15) {
                    this.value = words.slice(0, 15).join(" ");
                    alert("Only 15 words are allowed.");
                }
            });
        </script>
    }

</body>
</html>
