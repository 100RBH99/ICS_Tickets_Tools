<script>
    $(document).ready(function () {
        $('#MyDataTable').DataTable({
            responsive: true,
            paging: true,
            scrollX: true,
            lengthMenu: [10, 25, 50, 100],
            pageLength: 10,
            searching: true,
            ordering: false,
            info: true,
            stateSave: true,
            language: {
                search: "Search:",
                lengthMenu: "Show _MENU_ entries",
                info: "Showing _START_ to _END_ of _TOTAL_ entries",
                paginate: {
                    previous: "Previous",
                    next: "Next"
                }
            }
        });

        var errorMessage = '@TempData["ErrorMessage"]';
        var successMessage = '@TempData["SuccessMessage"]';
        if (errorMessage) {
            alert(errorMessage);
        }
        if (successMessage) {
            alert(successMessage);
        }
    });
</script>

<script>
    $(document).ready(function () {
        $(function () {
            var ErSalesDetails = $('#ErQuotationDetails');

            $('button[data-toggle="ajax-ersales" ]').click(function (event) {

                var url = $(this).data('url');

                $.get(url).done(function (data) {
                    ErSalesDetails.html(data);
                    ErSalesDetails.find('.modal').modal('show');
                })
                $(".modal-backdrop").remove();

            })

        })
    });
</script>
<script>
    $(document).ready(function () {
        var currentYear = new Date().getFullYear();
        var amountofyear = 30;
        for (var i = 0; i < 20; i++) {
            var next = currentYear + 1;
            var year = currentYear + '-' + next.toString().slice(-2);
            var option = new Option(year, year);
            $('#financialYear').append(option);
            currentYear--;
        }

        // Check if ViewBag.finacialyear is not null and select it in the dropdown
        var selectedYear = '@ViewBag.finacialyear';
        if (selectedYear) {
            $('#financialYear').val(selectedYear);
        }
    })
</script>


