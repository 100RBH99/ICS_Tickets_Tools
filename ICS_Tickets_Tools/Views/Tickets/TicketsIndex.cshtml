<div class="table-responsive">
    <table class="table table-bordered display nowrap" id="MyDataTable" style="width:100%;">
        <thead class="thead-dark">
            <tr style ="text-align-last: center;">
                <th>Ticket No</th>
                <th>User Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>SubCategory</th>
                <th>Image</th>
                @if (User.IsInRole("User"))
                {
                    <th>Assgin Name</th>
                }
                <th>Created Date</th>
                <th>Updated Date</th>
                @if (User.IsInRole("User"))
                {
                    @if (Model != null && Model.Any(m => m.Status == "Hold"))
                    {
                        <th>Hold Date</th>
                        <th>Hold Remark</th>
                    }
                    else
                    {
                        <th>Hold Date</th>
                        <th>Hold Remark</th>
                    }
                }
                <th>Status</th>
                @if (ViewBag.StatusType != "AllTickets" && ViewBag.StatusType != "TodayTickets")
                {
                    <th>Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    @*<td>@user.Id</td> *@
                    <td>@user.TicketNo</td>
                    <td>@user.EmpName</td>                   
                    <td style="white-space: normal; word-wrap: break-word; max-width: 300px;">
                        @Html.Raw(user.TicketDescription?.Replace(Environment.NewLine, "<br />"))
                    </td>
                    <td>@user.CategoryName</td>
                    <td>@user.SubCategoryName</td>

                    @if (string.IsNullOrEmpty(user.Image))
                    {
                        <td>No Uploaded Image</td>
                    }
                    else
                    {
                        <td>
                            @foreach (var file in user.Image?.Split(',') ?? Array.Empty<string>())
                            {
                                if (!string.IsNullOrEmpty(file))
                                {
                                    string fileUrl = Url.Content("~/TicketIssueImage/" + file);
                                    string fileExtension = System.IO.Path.GetExtension(file).ToLower();

                                    if (fileExtension == ".jpg" || fileExtension == ".jpeg" || fileExtension == ".png")
                                    {
                                        <a href="@fileUrl" target="_blank">
                                            <img src="@fileUrl" alt="Image" width="60" height="60" />
                                        </a>
                                    }
                                    else if (fileExtension == ".pdf")
                                    {
                                        <a href="@fileUrl" target="_blank" class="btn btn-sm btn-outline-dark">PDF</a>
                                    }
                                }
                            }
                        </td>
                    }

                    @if (User.IsInRole("User"))
                    {
                        @if (string.IsNullOrEmpty(user.AssignedTo))
                        {
                            <td>No Assigned Name</td>
                        }
                        else
                        {
                            <td>@user.AssignedTo</td>
                        }

                    }
                    <td>@user.CreatedDate.ToString("dd/MM/yyyy")</td>

                    <td>@(user.UpdatedDate.HasValue ? user.UpdatedDate.Value.ToString("yyyy-MM-dd HH:mm:ss") : "No UpdateDate")</td>

                    @if (User.IsInRole("User"))
                    {
                        @if (user.Status == "Hold")
                        {
                            <td>@user.HoldDate?.ToString("dd/MM/yyyy")</td>
                            <td>@user.HoldRemark</td>
                        }
                        else
                        {
                            <td>No HoldDate </td>
                            <td>No HoldRemark </td>
                        }
                    }
                    <td class="btn-group-sm" style="color: @(user.Status == "Closed" ? "red" : user.Status == "Hold" ? "deeppink" : "green")">
                        @user.Status
                    </td>
                    @if (ViewBag.StatusType != "AllTickets" && ViewBag.StatusType != "TodayTickets")
                    {
                        <td>
                            @if (User.IsInRole("User"))
                            {
                                @if (string.IsNullOrEmpty(user.AssignedTo))
                                {
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                                }
                                else
                                {
                                    <span class="btn btn-primay" style="color: darkorange;">Assigned</span>
                                }
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="AssignTicket" asp-route-id="@user.Id" class="btn btn-warning">Assign Ticket</a>
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>


</div>



